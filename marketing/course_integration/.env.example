# MultiOS Course Integration Platform Configuration

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/multios_courses
DB_HOST=localhost
DB_PORT=5432
DB_NAME=multios_courses
DB_USER=user
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Canvas LMS Configuration
CANVAS_API_URL=https://your-institution.instructure.com/api/v1
CANVAS_CLIENT_ID=your-canvas-client-id
CANVAS_CLIENT_SECRET=your-canvas-client-secret
CANVAS_REDIRECT_URI=http://localhost:5000/api/lms/canvas/callback

# Blackboard LMS Configuration
BLACKBOARD_API_URL=https://your-institution.blackboard.com/learn/api/public/v3
BLACKBOARD_CLIENT_ID=your-blackboard-client-id
BLACKBOARD_CLIENT_SECRET=your-blackboard-client-secret

# Moodle LMS Configuration
MOODLE_API_URL=https://your-institution.moodle.com/webservice/rest/server.php
MOODLE_WSTOKEN=your-moodle-webservice-token

# Google Classroom Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/lms/google/callback

# Microsoft Teams Configuration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/lms/microsoft/callback

# LTI Configuration
LTI_KEY=your-lti-consumer-key
LTI_SECRET=your-lti-consumer-secret
LTI_LOGIN_URL=http://localhost:5000/api/lms/lti/login
LTI_LAUNCH_URL=http://localhost:5000/api/lms/lti/launch

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,zip,rar

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@multios.edu
FROM_NAME=MultiOS Course Platform

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=30000

# Lab Environment Configuration
LAB_VM_BASE_URL=https://labs.multios.org
LAB_VM_API_KEY=your-lab-api-key
LAB_MAX_CONCURRENT=50

# Notification Configuration
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RETRY_ATTEMPTS=3

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_MEMORY=100