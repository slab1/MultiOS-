# Default PXE Boot Configuration for MultiOS Enterprise
# This file is automatically generated and managed by the PXE server

DEFAULT multios-default
PROMPT 1
TIMEOUT 30
ONTIMEOUT local

# Display boot menu for 30 seconds
TIMEOUT 30

# MultiOS Desktop Installation
LABEL multios-desktop
    MENU LABEL MultiOS Desktop (Standard Installation)
    KERNEL multios/kernels/desktop.kernel
    APPEND initrd=multios/kernels/desktop.initrd console=tty0 console=ttyS0,115200

# MultiOS Laptop Installation
LABEL multios-laptop
    MENU LABEL MultiOS Laptop (Portable Installation)
    KERNEL multios/kernels/laptop.kernel
    APPEND initrd=multios/kernels/laptop.initrd console=tty0 console=ttyS0,115200

# MultiOS Server Installation
LABEL multios-server
    MENU LABEL MultiOS Server (Headless Installation)
    KERNEL multios/kernels/server.kernel
    APPEND initrd=multios/kernels/server.initrd console=tty0 console=ttyS0,115200

# MultiOS Tablet Installation
LABEL multios-tablet
    MENU LABEL MultiOS Tablet (Touch Interface)
    KERNEL multios/kernels/tablet.kernel
    APPEND initrd=multios/kernels/tablet.initrd console=tty0 console=ttyS0,115200

# Rescue Mode
LABEL rescue
    MENU LABEL MultiOS Rescue Mode
    KERNEL multios/kernels/rescue.kernel
    APPEND initrd=multios/kernels/rescue.initrd rescue console=tty0 console=ttyS0,115200

# Memory Test
LABEL memtest
    MENU LABEL Memory Test
    KERNEL memtest86

# Local Boot
LABEL local
    MENU LABEL Local Boot
    LOCALBOOT 0

# Auto Installation Menu
LABEL auto-install
    MENU LABEL MultiOS Auto Installation
    KERNEL multios/kernels/auto.kernel
    APPEND initrd=multios/kernels/auto.initrd auto=true priority=high console=tty0 console=ttyS0,115200
